<h1 class="container">Book your orders to quench your Thirst!!!</h1>

<form action="/book" method ="POST">
<div>
    <label for="name">Name      :</label>
    <input type="text" name="name" id="name" placeholder="UserName" required>
</div>
<div>
    <label for="carno">Citizen ID       :</label>
    <input type="text" name="carno"id="carno" placeholder="CitizenID" required>
</div>
<div>
    <label for="mailid">Mail-Id        :</label>
    <input type="email" name="mailid" id="mailid"placeholder="Enter the emailid ">
</div>
<div>
    <label for="address">Address        :</label>
    <input type="text" name="address" id="address"placeholder="Enter the address">
</div>
