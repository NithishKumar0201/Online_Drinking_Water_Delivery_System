    <label for="Outer Wash">WaterBottles - 10 cases</label><br>
    <input type="checkbox" name="service" value="WaterCane - 20 Litrs" id="InnerAirCleaning">
    
    <label for="InnerAirCleaning">WaterCane - 20 Litrs</label><br>
    <input type="checkbox" name="service" value="Festival Water Supply" id="Paint Fill">
    <label for="Paint Fill">Festival Water Supply</label><br>
    
</div><br>
<div>
    <button type="reset">Reset</button>
<button type="submit">Submit</button>

</div>
</form>

